        <Button Content="Рассчитать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="350,250,0,0"/>
        <Label Content="Общая сумма выплаты: " Margin="135,300,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Сумма процентов: " Margin="135,330,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Эффективная ставка: " Margin="135,360,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ListBox HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="600,300,0,0"/>
        <Label Content="Детализация выплат" Margin="585,247,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
