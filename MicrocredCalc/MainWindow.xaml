        xmlns:local="clr-namespace:MicrocredCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Height="25" Margin="250,60,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Height="25" Margin="250,110,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Height="25" Margin="585,60,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Height="25" Margin="585,110,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Height="25" Margin="585,160,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>

        <Label Content="Сумма займа" Margin="135,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Срок займа" Margin="135,110,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
